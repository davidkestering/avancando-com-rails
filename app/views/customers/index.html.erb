<div class="container">
    <div class="jumbotron">
        <h2>List of Customers</h2>

        <%= link_to "New", new_customer_path, remote: true, class: 'btn btn-primary' %>
    </div>

    <div class="modal-customer"></div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Value</th>
            </tr>
        </thead>

        <tbody id="customers">
            <%= render @customers %>
        </tbody>
    </table>

    <%= render 'modal' %>
</div>