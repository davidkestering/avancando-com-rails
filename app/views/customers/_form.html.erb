<%= form_for(@customer, remote: true) do |f| %>
    <div class="form-group">
        <%= f.text_field :name, :class => 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.text_field :value, :class => 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.submit "Create", :class => 'btn btn-primary' %>
    </div>

<% end %>